{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": [
        "./worker-configuration.d.ts"
    ],
    "paths": {
      "@features/*": ["./src/features/*"],
      "@transaction/*": ["./src/features/transaction/*"],
      "@user/*": ["./src/features/user/*"],
    }
  },
}